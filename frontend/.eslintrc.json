{
    "extends": [
        "../.eslintrc.json",
        "plugin:react/recommended",
        "plugin:@next/next/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": ["react"],
    "env": {
        "browser": true
    },
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "overrides": [
        {
            "files": ["./src/pages/**/*.tsx"],
            "rules": {
                "import/no-unused-modules": 0
            }
        }
    ]
}
